<!DOCTYPE html>
<html lang="en">
<%- include("partials/head.ejs") %>

    <body class="">
        <main class="">
            <header>
                <%- include("./partials/navbar") %>
                    <hr>
            </header>
            <section class="container mt-5">
                <h1 class="text-center">
                    <%= pokemon.species.name %>
                </h1>
                <div class="d-flex flex-wrap w-100">
                    <div class="d-flex flex-column align-items-center">
                        <img class="detail-img" src="<%= pokemon.sprites.front_default %>"
                            alt="<%= pokemon.species.name %>">
                        <img class="detail-img" src="<%= pokemon.sprites.back_default %>"
                            alt="<%= pokemon.species.name %>">
                    </div>
                    <div class="d-flex flex-column">
                        <div class="h-auto">
                            <table>
                                <tbody>
                                    <tr>
                                        <th>abilities</th>
                                        <td>
                                        <% for (let i=0;i < pokemon.abilities.length; i++) { %>                                          
                                                <span>
                                                    <%= pokemon.abilities[i].ability.name %>
                                                </span>
                                                <br>       
                                        <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Type</th>
                                        <td>
                                            <% for (let i=0;i < pokemon.types.length; i++) { %>
                                                <span>
                                                    <%= pokemon.types[i].type.name %>
                                                </span>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Base exp</th>
                                        <td>
                                            <span>
                                                <%= pokemon.base_experience %>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table> 
                        </div>
                        <div class="mt-5 ">
                            <% for (let i=0;i < pokemon.stats.length; i++) { %>
                                <table>
                                    <tbody>
                                        <tr>
                                            <th>
                                                <%= pokemon.stats[i].stat.name %>
                                            </th>
                                            <td>
                                                <%= pokemon.stats[i].base_stat %>
                                            </td>
                                            <td><progress value="<%= pokemon.stats[i].base_stat %>"
                                                    max="120"></progress>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <% } %>
                        </div>
                    </div>
                    <h3>Game indices</h3>
                    <div>
                        <% for (let i=0;i < pokemon.game_indices.length; i++) { %>
                            <div>
                                <span>
                                    <%= pokemon.game_indices[i].version.name %>:
                                </span>
                                <span>
                                    <%= pokemon.game_indices[i].game_index %>
                                </span>
                            </div>
                            <% } %>
                    </div>
                </div>
            </section>
        </main>
    </body>

</html>